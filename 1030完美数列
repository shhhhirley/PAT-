#include<iostream>
#include<algorithm>
#include<vector>


using namespace std;

int main()
{
   
    int n,p;
    cin>>n>>p;
    int num[n];
    int max=0;
    if(n==1)
    {
        if(p!=1)
            cout<<0;
        else
            cout<<1;
        
    }
    else
    {
        
        for(int i=0;i<n;i++)
            cin>>num[i];
        sort(num,num+n);
        //   for(int i=0;i<n;i++)
        //       cout<<num[i]<<" ";
        
        for(int i=n-1;i>0;i--)
        {
            //cout<<bound;
            for(int j=0;j<i;j++)
            {
                if(num[j]*p<num[i])
                    continue;
                if(max<i-j+1)
                    max=i-j+1;
                    //  cout<<i-j+1<<endl;
                
                
            }
            
        }
      
        
        cout<<max;
    }
    
    
    
    
}
